{
    "extends": "@karaokems/typescript-config/react-library.json",
    "include": [
        ".react-router/types/**/*",
        "app/**/*",
        "app/**/.server/**/*",
        "app/**/.client/**/*"
    ],
    "compilerOptions": {
        "rootDirs": [
            ".",
            "./.react-router/types"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@/app/*": [
                "./app/*"
            ]
        },
    }
}